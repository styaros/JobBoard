<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/create_job_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/create_job_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

        <TextView
            android:id="@+id/tv_name_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Name:"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_name"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/background_rounded_shape"
            android:backgroundTint="@color/browser_actions_bg_grey"
            app:layout_constraintStart_toEndOf="@id/tv_name_static"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_static"
            app:layout_constraintTop_toTopOf="@id/tv_name_static" />

        <TextView
            android:id="@+id/tv_description_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:text="Description:"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@id/et_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_static" />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:minLines="4"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:background="@drawable/background_rounded_shape"
            android:backgroundTint="@color/browser_actions_bg_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_location_static"
            app:layout_constraintTop_toBottomOf="@id/tv_description_static" />

        <TextView
            android:id="@+id/tv_location_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Location:"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_location"
            app:layout_constraintTop_toBottomOf="@id/et_description"/>

        <EditText
            android:id="@+id/et_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/background_rounded_shape"
            android:backgroundTint="@color/browser_actions_bg_grey"
            app:layout_constraintStart_toEndOf="@id/tv_location_static"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_location_static"
            app:layout_constraintTop_toTopOf="@id/tv_location_static" />

        <TextView
            android:id="@+id/tv_salary_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:text="Salary:"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_salary_start"
            app:layout_constraintTop_toBottomOf="@id/tv_location_static"/>

        <EditText
            android:id="@+id/et_salary_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="number"
            android:background="@drawable/background_rounded_shape"
            android:backgroundTint="@color/browser_actions_bg_grey"
            app:layout_constraintStart_toEndOf="@id/tv_salary_static"
            app:layout_constraintEnd_toStartOf="@id/tv_hyphen"
            app:layout_constraintBottom_toBottomOf="@id/tv_salary_static"
            app:layout_constraintTop_toTopOf="@id/tv_salary_static" />

        <TextView
            android:id="@+id/tv_hyphen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="32sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/et_salary_start"
            app:layout_constraintTop_toTopOf="@id/et_salary_start"
            app:layout_constraintEnd_toStartOf="@id/et_salary_end"
            app:layout_constraintBottom_toBottomOf="@id/et_salary_start"/>

        <EditText
            android:id="@+id/et_salary_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="number"
            android:background="@drawable/background_rounded_shape"
            android:backgroundTint="@color/browser_actions_bg_grey"
            app:layout_constraintStart_toEndOf="@id/tv_hyphen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_salary_static"
            app:layout_constraintTop_toTopOf="@id/tv_salary_static" />

        <TextView
            android:id="@+id/tv_experience_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:text="Experience:"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_location"
            app:layout_constraintTop_toBottomOf="@id/tv_salary_static"/>

        <Spinner
            android:id="@+id/spinner_experience"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/tv_experience_static"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_experience_static"
            app:layout_constraintTop_toTopOf="@id/tv_experience_static" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/categories_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_experience_static">

            <ImageView
                android:id="@+id/iv_arrow_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:text="@string/categories"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/iv_arrow_categories"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:backgroundTint="@android:color/white"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_categories"
                tools:listitem="@layout/rv_item_just_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>