<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navifation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.jobboard.ui.auth.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"/>

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.jobboard.ui.auth.start.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/fragment_start"/>

    <fragment
        android:id="@+id/jobSearchFragment"
        android:name="com.example.jobboard.ui.main.jobsearch.jobSearch.JobSearchFragment"
        android:label="JobSearchFragment"
        tools:layout="@layout/fragment_job_search">
        <argument
            android:name="isEmployer"
            app:argType="boolean"
            android:defaultValue="false"/>
    </fragment>

    <fragment
        android:id="@+id/companyProfileFragment"
        android:name="com.example.jobboard.ui.main.profile.company.profile.CompanyProfileFragment"
        android:label="FragmentCompanyProfile"
        tools:layout="@layout/fragment_company_profile">
        <argument
            android:name="employerId"
            app:argType="string"
            android:defaultValue=""/>
    </fragment>

    <fragment
        android:id="@+id/employeeProfileFragment"
        android:name="com.example.jobboard.ui.main.profile.employee.EmployeeProfileFragment"
        android:label="EmployeeProfileFragment"
        tools:layout="@layout/fragment_employee_profile">
        <argument
            android:name="isEmployeeMainPage"
            app:argType="boolean"
            android:defaultValue="true"/>
    </fragment>

    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.jobboard.ui.main.favourites.FavouritesFragment"
        android:label="FavouritesFragment"
        tools:layout="@layout/fragment_favourites"/>

    <fragment
        android:id="@+id/jobDetailsFragment"
        android:name="com.example.jobboard.ui.main.jobsearch.jobDetails.JobDetailsFragment"
        android:label="JobDetailsFragment"
        tools:layout="@layout/fragment_job_detail_info">
        <argument
            android:name="jobId"
            app:argType="string"/>
        <argument
            android:name="employerId"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/editCompanyProfileFragment"
        android:name="com.example.jobboard.ui.main.profile.company.edit.EditCompanyProfileFragment"
        android:label="EditCompanyProfileFragment"
        tools:layout="@layout/fragment_edit_company_profile"/>
</navigation>